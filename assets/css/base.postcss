html {
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;

  -webkit-tap-highlight-color: transparent;
  -ms-touch-action: manipulation;
  touch-action: manipulation;

  font-family: "Roboto Mono", "Inter";
}

body { 
  @apply overflow-hidden;
}

:focus-visible {
  outline: transparent !important;
}
:focus {
  outline: transparent !important;
}

h1 {
  @apply text-5xl;
}
h2 {
  @apply text-lg font-bold leading-none;
}
h3 { 
  @apply text-base;
}
h4 {
  @apply text-sm text-brand-gray;
}
h5 {
  @apply text-xs text-brand-light-gray tracking-widest;
}
a {
  @apply leading-none;
  @apply border-b border-brand-dark;
}

hr {
  @apply border-t border-brand-dark;
}

/* üí´ Animations */
.slide-fade-leave-active {
  transition-property: transform, opacity;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: .8s;
}
.slide-fade-enter-active, .slide-fade-enter-active {
  transition-property: transform, opacity;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: .4s;
}
.slide-fade-enter, .slide-fade-leave-to {
  transform: translateY(5rem);
  opacity: 0;
}
@keyframes bounce {
  0%   { opacity: 1; }
  50%  { opacity: 0; }
  100% { opacity: 1; }
}

